{
  "coc": {
    "preferences": {
      "formatOnSaveFiletypes": ["python", "json", "css", "Markdown", "javascript", "javascriptreact", "typescript", "typescriptreact"],
      "diagnostic": {
        "displayByAle": false,
        "enable": true
      }
    }
  },
  "suggest": {
    "autoTrigger": "always",
    "snippetIndicator": "â–º",
    "timeout": 500
  },
  "python": {
    "linting": {
      "enabled": true,
      "mypyEnabled": false,
      "setLinter": "flake8",
      "pydocstyleEnabled": false
    },
    "formatting": {
      "provider": "black",
      "blackArgs": ["-l", "120"]
    },
    "pythonPath": "/usr/bin/python3.7"
  },
  "html": {
    "enable": true
  }
}
