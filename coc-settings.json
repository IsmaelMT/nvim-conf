{
  // diagnostics
  "diagnostic.errorSign": " ",
  "diagnostic.warningSign": " ",
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": " ",
  "diagnostic.virtualText": true, // this won't work with codelens when error on same line

  // preferences
  "coc.preferences.hoverTarget": "float",
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "graphql",
    "html",
    "yaml",
    "json",
    "python"
  ],
  "coc.preferences.rootPatterns": [".workspace", ".env", ".git"],

  // Suggest
  "suggest.autoTrigger": "always",
  "suggest.snippetIndicator": "►",
  "suggest.timeout": 500,
  "suggest.completionItemKindLabels": {
    "text": "t",
    "method": "m",
    "function": ""
  },

  // list
  "list.indicator": ">",
  "list.selectedSignText": " ",

  // Python
  "python.jediEnabled": false,
  "python.linting.enabled": true,
  "python.linting.mypyEnabled": true,
  "python.linting.pydocstyleEnabled": false,
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["-l", "120"],
  "python.venvFolders": ["envs", ".pyenv", ".direnv", ".virtualenvs"],
  "python.venvPath": "~/.virtualenvs",

  // emmet
  "emmet.includeLanguages": {
    "vue-html": "html",
    "javascript": "javascriptreact"
  },

  // html
  "html.enable": true,

  // Lang servers
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  },

  // explorer
  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "explorer.keyMappings.global": {
    "<cr>": ["expandable?", "expand", "open"],
    "v": "open:vsplit"
  },
  // tsserver
  "tsserver.npm": "/usr/local/bin/npm"
}
